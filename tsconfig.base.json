{
  "compilerOptions": {
    "baseUrl": "./packages",
    // "paths": {
    // "parabol-server/src/*": [
    // "./server/src/*"
    // ],
    // "parabol-client/src/*": [
    // "./client/src/*"
    // ],
    // },
    "allowJs": true,
    "checkJs": false,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true,
    "target": "es2019",
    "module": "commonjs",
    "jsx": "react",
    "importHelpers": true,
    "strict": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "pretty": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
  }
}
