{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "importHelpers": true,
    "jsx": "react",
    "lib": [
      "es2017",
      "dom"
    ],
    "module": "esNext",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "dist/lib",
    "paths": {

//      example of how to alias
//      "relay-runtime": ["node_modules/@mattkrick/relay-runtime"],
       "*": [
         "src/*",
         "stories/*"
       ]
    },
    "removeComments": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "target": "es2017",
    "strict": true,
    "sourceMap": true,
    "typeRoots": [
      "node_modules/@types",
      "packages/types"
    ],
    "traceResolution": false
  },
  "include": [
    "packages",
    "stories",
    "cypress"
  ],
  "awesomeTypescriptLoaderOptions": {
    "reportFiles": [
      "src/**/*.{ts,tsx}"
//      "stories/**/*.{ts,tsx}"
    ]
  }
}
