{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "paths": {
      "universal/*": [
        "src/universal/*"
      ],
      "server/*": [
        "src/server/*"
      ],
      "client/*": [
        "src/client/*"
      ],
      "utils/*": [
        "src/utils/*"
      ],
      "redux/*": [
        "src/redux/*"
      ],
      "routes/*": [
        "src/routes/*"
      ],
      "api/*": [
        "src/api/*"
      ]
    }
  }
}